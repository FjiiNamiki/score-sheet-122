  <% end %>
  <%# <form id="header-where" action="/input/" method="get">
    <input type="text" id="top-input" name='i' placeholder="検索したいカラム名を入力してください">
    <button class="search-btn">検索</button>
  </form> %>
</header>
<%= form_with model: @diary, url: diaries_path, class: 'registration-main', local: true do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        日誌投稿
      </h1>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">練習(試合)日</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='input-date-wrap'>
        <%= raw sprintf(
                  f.date_select(
                    :date,
                    class:'select-date',
                    id:"date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 2018,
                    end_year: (Time.now.year + 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
    </div>
    <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">練習(試合)場所</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :place, class:"input-default", id:"place", placeholder:"例) 浅古アーチェリー場", maxlength:"40" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">練習(試合)名</label>
          <span class="form-any">任意</span>
        </div>
        <%= f.text_area :event, class:"input-default", id:"event", placeholder:"例) 国体予選", autofocus: true %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">練習の総括</label>
          <span class="form-any">任意</span>
        </div>
        <%= f.text_area :total_memo, class:"other-text", id:"total_memo", placeholder:"今日の練習(試合)を振り返ろう（1,000文字,7行まで）\n例）今日は総じて風が強かった。\nフラッグを見ながら射てたので大崩れはしなかった。" ,rows:"7" ,maxlength:"1000" %>
      </div>
      <div class='register-btn'>
        <%= f.submit "日誌投稿" ,class:"register-red-btn" %>
      </div>
    </div>
  </div>
<% end %>
