<header id="header-wrapper">
  <%= link_to root_path, id:"root-path" do %>
    <div class="red-title"><span class="white-title">S</span><span class="black-title">c</span><span class="blue-title">o</span>r<span class="golde-title">eS</span>h<span class="blue-title">e</span><span class="black-title">e</span><span class="white-title">t</span></div>
  <% end %>
  <%# <form id="header-where" action="/input/" method="get">
    <input type="text" id="top-input" name='i' placeholder="検索したいカラム名を入力してください">
    <button class="search-btn">検索</button>
  </form> %>
  <ul class="header-right">
    <% if user_signed_in? %>
      <li><%= link_to '投稿する', new_diary_path, class: 'post-btn' %></li>
      <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
    <% else %>
      <li><%= link_to 'ログイン', new_user_session_path, class: 'login' %></li>
      <li><%= link_to '新規登録', new_user_registration_path, class: 'signup' %></li>
    <% end %>
  </ul>
  
</header>
<body>
  <%= image_tag "scoresheet_title.png", class:"top-img animate__animated animate__fadeInRightBig"%>
  <ul class='diary-lists'>
    
    <% @diaries.each do |diary| %>
      <li class='list animate__animated animate__fadeInUp'>
        <%= link_to(diary_path(diary.id), method: :get) do %>
          <div class='diary-info'>
            <h3 class='diary-date'>
              <%= diary.date %><br>
              <%= diary.user.nickname %>さんの練習
            </h3>
            <div class='diary-description'>
              <%= diary.total_memo %>
            </div>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
</body>

