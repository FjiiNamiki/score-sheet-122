      <%# <%= f.check_box :remember_me %> 
      <%# <%= f.label :remember_me %> 
    <%# </div> %>
  <%# <% end %> 

  <div class='register-btn'>
    <%= f.submit "ログイン" ,class:"register-red-btn" %>
  </div>
<% end %>
</div>
