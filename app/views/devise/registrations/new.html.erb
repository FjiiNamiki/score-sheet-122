<header id="header-wrapper">
  <%= link_to root_path, id:"root-path" do %>
    <div class="red-title">Score<span class="orange-title">Sheet</span></div>
  <% end %>
  <%# <form id="header-where" action="/input/" method="get">
    <input type="text" id="top-input" name='i' placeholder="検索したいカラム名を入力してください">
    <button class="search-btn">検索</button>
  </form> %>
</header>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_area :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_area :nickname, autofocus: true, autocomplete: "nickname" %>
  </div>

  <div class="field">
    <%= f.label :age %><br />
    <%= f.text_area :age, autofocus: true, autocomplete: "age" %>
  </div>

  <div class="field">
    <%= f.label :gender_id %><br />
    <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"gender-select"})  %>
  </div>

  <div class="field">
    <%= f.label :handle %><br />
    <%= f.text_area :handle, autofocus: true, autocomplete: "handle" %>
  </div>

  <div class="field">
    <%= f.label :rim %><br />
    <%= f.text_area :rim, autofocus: true, autocomplete: "rim" %>
  </div>

  <div class="field">
    <%= f.label :bowstring %><br />
    <%= f.text_area :bowstring, autofocus: true, autocomplete: "bowstring" %>
  </div>

  <div class="field">
    <%= f.label :arrow %><br />
    <%= f.text_area :arrow, autofocus: true, autocomplete: "arrow" %>
  </div>

  <div class="field">
    <%= f.label :other %><br />
    <%= f.text_area :other, autofocus: true, autocomplete: "other" %>
  </div>

  <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
