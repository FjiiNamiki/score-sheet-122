  <% end %>
  <%# <form id="header-where" action="/input/" method="get">
    <input type="text" id="top-input" name='i' placeholder="検索したいカラム名を入力してください">
    <button class="search-btn">検索</button>
  </form> %>
</header>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      新規登録
    </h1>
  </div>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <div class='form-text-wrap'>
       <label class="form-text">氏名</label>
       <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :name, class:"input-default", id:"name", placeholder:"例) 洋弓 太郎", maxlength:"40" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
       <label class="form-text">ニックネーム</label>
       <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) アチェ好き太郎", maxlength:"40" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
       <label class="form-text">メールアドレス</label>
       <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでもOK!", autofocus: true %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
       <label class="form-text">年齢</label>
       <span class="form-any">任意</span>
    </div>
    <%= f.text_area :age, class:"input-default", id:"age", placeholder:"例) 23", autofocus: true %>
    <p class='info-text'>※半角数字で入力してください</p>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
       <label class="form-text">性別</label>
       <span class="form-any">任意</span>
    </div>
    <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"gender-select"})  %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
       <label class="form-text">ハンドル</label>
       <span class="form-any">任意</span>
    </div>
    <%= f.text_area :handle, class:"input-default", id:"handle", placeholder:"例) WIAWIS TFT", autofocus: true %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
       <label class="form-text">リム</label>
       <span class="form-any">任意</span>
    </div>
    <%= f.text_area :rim, class:"input-default", id:"rim", placeholder:"例) WIAWIS MXT-10", autofocus: true %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
       <label class="form-text">弦</label>
       <span class="form-any">任意</span>
    </div>
    <%= f.text_area :bowstring, class:"input-default", id:"bowstring", placeholder:"例) ファーストフライト", autofocus: true %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
       <label class="form-text">矢</label>
       <span class="form-any">任意</span>
    </div>
    <%= f.text_area :arrow, class:"input-default", id:"arrow", placeholder:"例) ACE", autofocus: true %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
       <label class="form-text">その他の弓具</label>
       <span class="form-any">任意</span>
    </div>
    <%= f.text_area :other, class:"other-text", id:"other", placeholder:"その他の弓具（1,000文字,7行まで）\n（スタビライザー、サイトなど）\n例）サイト：SHIBUYA ULTIMA" ,rows:"7" ,maxlength:"1000" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
       <label class="form-text">自己紹介</label>
       <span class="form-any">任意</span>
    </div>
    <%= f.text_area :introduction, class:"other-text", id:"introduction", placeholder:"自己紹介（1,000文字,7行まで）\n例）奈良高校→大阪大学アーチェリー部" ,rows:"7" ,maxlength:"1000" %>
  </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
    </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード（確認用）</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password_confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div class='register-btn'>
    <%= f.submit "新規登録" ,class:"register-red-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
